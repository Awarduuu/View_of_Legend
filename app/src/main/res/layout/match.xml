<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DWG KIA"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/team1"
        android:textColor="@color/teal_200"
        android:background="@color/black"/>

    <Button
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/teal_200"
        android:onClick="onClick"
        android:text="찾으시는 날짜를 입력하세요" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="25sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:background="#808080"
        android:orientation="vertical">
        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="[경기 장소]"
            />
        <TextView
            android:id="@+id/place1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/place"
            android:text="LCK 아레나 (그랑서울 3F, 롤파크)"
            />
        <TextView
            android:id="@+id/book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/place1"
            android:text="[예매 일자]"
            />
        <TextView
            android:id="@+id/book1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/book"
            />

        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/book1"
            android:layout_margin="10dip"
            android:gravity="center"
            android:text="[예매 링크]"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/link1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@id/link"
            android:linksClickable="true"
            android:autoLink="web"
            android:text="http://ticket.interpark.com/Contents/Promotion/2018/Event/leagueOflegendChampionsKorea#"
            />
        <Button
            android:id="@+id/book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:gravity="center"
            android:backgroundTint="#666666"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@id/link1"
            android:text="알림 설정"
            android:onClick="sendNotification"
            />
    </RelativeLayout>

</LinearLayout>